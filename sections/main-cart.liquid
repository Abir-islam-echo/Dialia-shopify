{% schema %}
{
  "name": "Section name",
  "settings": []
}
{% endschema %}

<!-- Breadcrumb Area -->
<div
  class="tm-breadcrumb-area tm-padding-section"
  data-bgimage="{{ "breadcrumb-bg.jpg" | asset_url }}"
  data-black-overlay="4"
>
  <div class="container">
    <div class="tm-breadcrumb text-center">
      <h2>Shopping Cart</h2>
      <ul>
        <li><a href="index.html">Home</a></li>
        <li>Shopping Cart</li>
      </ul>
    </div>
  </div>
</div>
<!-- // Breadcrumb Area -->

{% form 'cart', cart %}
  <!-- Shopping Cart Area -->
  <div class="tm-section shopping-cart-area bg-white tm-padding-section">
    <div class="container">
      <!-- Shopping Cart Table -->
      <div class="tm-cart-table table-responsive">
        <table class="table table-bordered mb-0">
          <thead>
            <tr>
              <th class="tm-cart-col-image" scope="col">Image</th>
              <th class="tm-cart-col-productname" scope="col">Product</th>
              <th class="tm-cart-col-price" scope="col">Price</th>
              <th class="tm-cart-col-quantity" scope="col">Quantity</th>
              <th class="tm-cart-col-total" scope="col">Total</th>
              <th class="tm-cart-col-remove" scope="col">Remove</th>
            </tr>
          </thead>
          <tbody>
            {% for item in cart.items %}
              <tr>
                <td>
                  <a href="{{ item.url }}" class="tm-cart-productimage">
                    <img src="{{ item.image | image_url }}" alt="product image">
                  </a>
                </td>
                <td>
                  <a href="{{ item.url }}" class="tm-cart-productname">{{ item.title }}</a>
                </td>
                <td class="tm-cart-price">{{ item.price | money }}</td>
                <td>
                  <div class="tm-quantitybox">
                    <input type="number" name="updates[]" value="{{ item.quantity }}">
                  </div>
                </td>
                <td>
                  <span class="tm-cart-totalprice">{{ item.final_line_price | money }}</span>
                </td>
                <td>
                  <a href="{{ item.url_to_remove }}" class="tm-cart-removeproduct"><i class="zmdi zmdi-close"></i></a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <!-- // Shopping Cart Table -->

      <!-- Shopping Cart Content -->
      <div class="tm-cart-bottomarea">
        <div class="row">
          <div class="col-lg-8 col-md-6">
            <div class="tm-buttongroup">
              <a href="{{ location.origin }}/collections/all" class="tm-button">Continue Shopping <b></b></a>
              <button type="submit" name="update" class="tm-button">Update Cart</button>
            </div>
            <form action="#" class="tm-cart-coupon">
              <label for="coupon-field">Have a coupon code?</label>
              <input type="text" id="coupon-field" placeholder="Enter coupon code">
              <button type="submit" class="tm-button">Submit <b></b></button>
            </form>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="tm-cart-pricebox">
              <h2>Cart Totals</h2>
              <div class="table-responsive">
                <table class="table table-borderless">
                  <tbody>
                    <tr class="tm-cart-pricebox-subtotal">
                      <td>Cart Subtotal</td>
                      <td>{{ cart.total_price | money }}</td>
                    </tr>
                    <tr class="tm-cart-pricebox-shipping">
                      <td>(+) Shipping Charge</td>
                      <td>$15.00</td>
                    </tr>
                    <tr class="tm-cart-pricebox-total">
                      <td>Total</td>
                      <td>$190.00</td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <button type="submit" name="checkout" class="tm-button">Proceed To Checkout <b></b></button>
            </div>
          </div>
        </div>
      </div>
      <!-- // Shopping Cart Content -->
    </div>
  </div>
  <!-- // Shopping Cart Area -->
{% endform %}
{% stylesheet %}
{% endstylesheet %}

