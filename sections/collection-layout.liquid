
        <!-- Breadcrumb Area -->
        <div class="tm-breadcrumb-area tm-padding-section" data-bgimage="{{ "breadcrumb-bg.jpg" | asset_url }}"
            data-black-overlay="4">
            <div class="container">
                <div class="tm-breadcrumb text-center">
                    <h2>Products</h2>
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li>Products</li>
<!--                         <li>{{ collection.title }}</li> -->
                    </ul>
                </div>
            </div>
        </div>
        <!--// Breadcrumb Area -->

<!-- Products Page Content -->
            <div class="tm-section products-page-content tm-padding-section bg-white">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9 col-12">
                            <div class="sticky-sidebar">
                                <div action="#" class="tm-shop-header">
                                    <p class="tm-shop-countview">Showing {{ collection.all_products_count }} products </p>
                                  <select id='sorting-collection'>
                                        <option value="manual">Default Sorting</option>
                                        <option value="title-ascending">Name A-Z</option>
                                        <option value="title-descending">Name Z-A</option>
                                        <option value="price-ascending">Price Low-High</option>
                                        <option value="price-descending">Price High-Low</option>
                                        <option value="best-selling">Best Selleing</option>
                                        <option value="created-descending">Newest</option>
                                        <option value="created-ascending">Oldest</option>
                                    </select>
                                    {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}

                                        <select id='sorting-collection'>
                                        {%- for option in collection.sort_options %}
                                          <option
                                            value="{{ option.value }}"
                                            {%- if option.value == sort_by %}
                                              selected="selected"
                                            {%- endif %}
                                          >
                                            {{ option.name }}
                                          </option>
                                        {% endfor -%}
                                        </select>
                                    
                                </div>
                                <div class="tm-shop-products">
                                    <div class="row mt-30-reverse">
                                      {% paginate collection.products by 12 %}
                                        {%  for product in collections.all.products %}
                                          
                                           <!-- Single Product -->
                                            <div class="col-lg-4 col-md-6 col-sm-6 col-12 mt-30">
                                                <div class="tm-product">
                                                    <div class="tm-product-image">
                                                        <a class="tm-product-imagelink" href="{{ product.url }}">
                                                            <img src="{{ product.featured_image | image_url }}"
                                                                alt="product image">
                                                        </a>
                                                        <ul class="tm-product-actions">
                                                            <li><button type="button" data-fancybox
                                                                    data-src="#tm-product-quickview"><i
                                                                        class="zmdi zmdi-eye"></i></button></li>
                                                            <li><a href="cart.html"><i
                                                                        class="zmdi zmdi-shopping-cart"></i></a></li>
                                                            <li><a href="cart.html"><i class="zmdi zmdi-favorite"></i></a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div class="tm-product-content">
                                                        <h5 class="tm-product-title"><a
                                                                href="{{ product.url }}">{{ product.title }}</a></h5>
                                                        <div class="tm-product-rating">
                                                            <span class="active"><i class="zmdi zmdi-star"></i></span>
                                                            <span class="active"><i class="zmdi zmdi-star"></i></span>
                                                            <span class="active"><i class="zmdi zmdi-star"></i></span>
                                                            <span class="active"><i class="zmdi zmdi-star"></i></span>
                                                            <span class="active"><i class="zmdi zmdi-star"></i></span>
                                                        </div>
                                                        <h6 class="tm-product-price"> {{ product.price | money_with_currency }}
                                                          {% if product.compare_at_price -%}
                                                            <del>{{ product.compare_at_price | money_without_currency }}</del>
                                                          {%- endif %}</h6>
                                                          {% if product.compare_at_price %}
                                                            <span class="sale-tag"> Sale!! </span>
                                                          {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                            <!--// Single Product -->
                                      {% endfor %}
                                        <div class="tm-pagination mt-50">
                                          {% render 'pagination', paginate: paginate, page:'collection' %}  
                                        </div>
                                      {% endpaginate %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-12">
                            <div class="sticky-sidebar">
                                <div class="widgets">

                                    <!-- Single Widget -->
                                    <div class="single-widget widget-search">
                                        <h5 class="widget-title">Search</h5>
                                        <form action="#" class="widget-search-form">
                                            <input type="text" placeholder="Search...">
                                            <button type="submit"><i class="zmdi zmdi-search"></i></button>
                                        </form>
                                    </div>
                                    <!--// Single Widget -->

                                    <!-- Single Widget -->
                                    <div class="single-widget widget-pricefilter">
                                        <h5 class="widget-title">Filter by Price</h5>
                                        <div class="widget-pricefilter-inner">
                                            <div class="tm-rangeslider" data-range_min="0" data-range_max="800"
                                                data-cur_min="200" data-cur_max="550">
                                                <div class="tm-rangeslider-bar nst-animating"></div>
                                                <span class="tm-rangeslider-leftgrip nst-animating" tabindex="0"></span>
                                                <span class="tm-rangeslider-rightgrip nst-animating"
                                                    tabindex="0"></span>
                                            </div>
                                            <div class="widget-pricefilter-actions">
                                                <p class="widget-pricefilter-price">Price: $<span
                                                        class="tm-rangeslider-leftlabel">308</span>
                                                    - $<span class="tm-rangeslider-rightlabel">798</span></p>
                                                <button class="widget-pricefilter-button">Filter</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!--// Single Widget -->

                                    <!-- Single Widget -->
                                    <div class="single-widget widget-categories">
                                        <h5 class="widget-title">Categories</h5>
                                     
                                        <ul>
                                         {% for collection in collections %}
                                           {% if forloop.index>=10 %}
                                           {% break %}
                                             {% endif %}
                                        <li><a href="{{ collection.url }}">{{ collection.title }} <span>{{ collection.products_count }}</span></a></li>
                                        {% endfor %}
                                        </ul>
                                        
                                    </div>
                                    <!--// Single Widget -->

                                    <!-- Single Widget -->
                                    <div class="single-widget widget-popularproduct">
                                        <h5 class="widget-title">Popular Products</h5>
                                        <ul>


                                       {% for collection in collections %}
                                         {% if variable>=6 %}
                                             {% break %}
                                            {% endif %}
                                         {% assign products = collection.products | sort: "best-selling" %}
                                         {% for product in products  %}
                                           {% capture _ %}{% increment variable %}{% endcapture %}
                                           {% if variable>=6 %}
                                             {% break %}
                                            {% endif %}
                                           <li>
                                              <a href="{{ product.url }}" class="widget-popularproduct-image">
                                                  <img src="{{ product.featured_image | image_url }}"
                                                      alt="product thumbnail">
                                              </a>
                                              <div class="widget-popularproduct-content">
                                                  <h6><a href="{{ product.url }}">{{ product.title }}</a></h6>
                                                  <span> {{ product.price | money_with_currency }}
                                                        {% if product.compare_at_price -%}
                                                          <del>{{ product.compare_at_price | money_without_currency }}</del>
                                                        {%- endif %}</span>
                                              </div>
                                          </li>
                                           {% endfor %}    
                                        {% endfor %}
                                          
                                                                              
                                        </ul>
                                    </div>
                                    <!--// Single Widget -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--// Products Page Content -->

{% schema %}
  {
    "name": "Collection",
    "settings": [
      {
        "type":"collection",
        "id":"collection-id",
        "label":"Collection"
      }
    ]
  }
{% endschema %}
<style>
.visuallyhidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
  white-space: nowrap;
}
  
.pagination li {
  display: inline; 
  margin: 0 5px;
}
</style>


<script>
  document.querySelector('#sorting-collection').onchange=(e)=>{
    location.href=location.origin+location.pathname+'?sort_by='+e.target.value
  }

</script>