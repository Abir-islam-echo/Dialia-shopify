{% schema %}
  {
    "name": "Article",
      "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ],
    "presets":[
      {
        "name":"Article"
      }
    ]
  }
{% endschema %}

{% comment %} {% if template contains 'article' or template contains 'blog' %}
  {% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}
{% endif %} {% endcomment %}

<!-- Breadcrumb Area -->
<div
  class="tm-breadcrumb-area tm-padding-section"
  data-bgimage="{{ "breadcrumb-bg.jpg" | asset_url }}"
  data-black-overlay="4"
>
  <div class="container">
    <div class="tm-breadcrumb text-center">
      <h2>Blog Details</h2>
      <ul>
        <li><a href="index.html">Home</a></li>
        <li><a href="blog.html">Blog</a></li>
        <li>{{ article.title | slice: 0,20 | append : ' ...' }}</li>
      </ul>
    </div>
  </div>
</div>
<!-- // Breadcrumb Area -->
<!-- Blog Area -->
<div class="tm-section blogs-area bg-whtie tm-padding-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="sticky-sidebar">
          <div class="tm-blog blogitem">
            <div class="tm-blog-top">
              <img src="{{ article.image | image_url }}" alt="blog image">
              <span class="tm-blog-date">{{ article.created_at | date: "%B %d, %Y" }}</span>
            </div>
            <div class="tm-blog-bottom">
              <div class="tm-blog-meta">
                <span
                  ><a href="blog.html"><i class="zmdi zmdi-account"></i> Admin</a></span
                >
                <span
                  ><a href="blog-details.html"><i class="zmdi zmdi-comments"></i> Comments (0)</a></span
                >
                <span
                  ><a href="blog.html"><i class="zmdi zmdi-folder"></i> Services</a></span
                >
              </div>
              <h5 class="tm-blog-title">
                {{ article.title }}
              </h5>
              <p>
                {{ article.content }}
              </p>
              <blockquote>
                <p>
                  {{ article.content }}
                </p>
              </blockquote>
              <p>
                {{ article.content }}
              </p>
            </div>
            <div class="blogitem-tags">
              <span class="blogitem-tags-title">
                <i class="zmdi zmdi-tag-more"></i>
              </span>
              <ul>
                <li><a href="blog.html">Apps</a></li>
                <li><a href="blog.html">Development</a></li>
                <li><a href="blog.html">Php</a></li>
                <li><a href="blog.html">Web</a></li>
              </ul>
            </div>

            <!-- Blogitem Comments -->
            <div class="blogitem-comments mt-50">
              <h5 class="small-title">Comments ({{ article.comments_count }}), {% if  article.comments_count  == 0 %}no comments yet.{% endif %}</h5>
              <div class="tm-comment-wrapper">
                <!-- Comment Single -->
                {% for comment in article.comments %}
                  <div class="tm-comment">
                  <div class="tm-comment-thumb">
                    <img src="assets/images/authors/author-image-1.jpg" alt="author image">
                  </div>
                  <div class="tm-comment-content">
                    <h6 class="tm-comment-authorname"><a href="#">{{ comment.author }}</a></h6>
                    <span class="tm-comment-date">{{ comment.created_at | date: "%B %d, %Y" }}</span>
                    <p>
                      {{ comment.content }}
                    </p>
                    <a href="#" class="tm-comment-replybutton"><i class="zmdi zmdi-mail-reply-all"></i> Reply</a>
                  </div>
                </div>
                {% endfor %}
                
                <!-- // Comment Single -->

              </div>
            </div>
            <!-- // Blogitem Comments -->

            <!-- Blogitem Commentbox -->
            <div class="blogitem-commentbox mt-50">
              <h5 class="small-title">Leave a Comment</h5>
              <form action="{{ article.comment_post_url }}" class="tm-commentbox">
                <div class="tm-commentbox-singlefield">
                  <p>Your email address will not be published. Required fields are marked *</p>
                </div>
                <div class="tm-commentbox-singlefield w-33">
                  <label for="tm-comment-namefield">Name*</label>
                  <input type="text" id="tm-comment-namefield">
                </div>
                <div class="tm-commentbox-singlefield w-33">
                  <label for="tm-comment-email">Email*</label>
                  <input type="email" id="tm-comment-email">
                </div>
                <div class="tm-commentbox-singlefield w-33">
                  <label for="tm-comment-website">Website</label>
                  <input type="text" id="tm-comment-website">
                </div>
                <div class="tm-commentbox-singlefield">
                  <label for="tm-comment-textbox">Comment</label>
                  <textarea
                    name="tm-comment-textbox"
                    id="tm-comment-textbox"
                    cols="30"
                    rows="7"
                  ></textarea>
                </div>
                <div class="tm-commentbox-singlefield">
                  <button type="submit" class="tm-button tm-button-dark">Post Comment</button>
                </div>
              </form>
            </div>
            <!-- // Blogitem Commentbox -->
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="sticky-sidebar">
          <div class="widgets widgets-blog">
            <!-- Single Widget -->
            <div class="single-widget widget-search">
              <h5 class="widget-title">Search</h5>
              <form action="#" class="widget-search-form">
                <input type="text" placeholder="Search...">
                <button type="submit"><i class="zmdi zmdi-search"></i></button>
              </form>
            </div>
            <!-- // Single Widget -->

            <!-- Single Widget -->
            <div class="single-widget widget-categories">
              <h5 class="widget-title">Categories</h5>
              <ul>
                <li>
                  <a href="#">Moxibustion Therapy <span>(02)</span></a>
                </li>
                <li>
                  <a href="#">Headaches Treatments <span>(03)</span></a>
                </li>
                <li>
                  <a href="#">Auriculoterapia <span>(09)</span></a>
                </li>
                <li>
                  <a href="#">Falls Prevention Program <span>(04)</span></a>
                </li>
                <li>
                  <a href="#">Shockwave Therapy <span>(08)</span></a>
                </li>
                <li>
                  <a href="#">Intense Pulsed Light <span>(02)</span></a>
                </li>
              </ul>
            </div>
            <!-- // Single Widget -->

            <!-- Single Widget -->
            <div class="single-widget widget-recentpost">
              <h5 class="widget-title">Recent Posts</h5>
              <ul>
                {% for article in section.settings.blog.articles  %}
                  {% if forloop.index<=3 %}
                    <li>
                  <a href="{{ article.url }}" class="widget-recentpost-image">
                    <img src="{{ article.image | image_url }}" alt="blog thumbnail">
                  </a>
                  <div class="widget-recentpost-content">
                    <h6><a href="{{ article.url }}">{{ article.title }}</a></h6>
                    <span>{{ article.created_at | date: "%B %d, %Y" }}</span>
                  </div>
                </li> 
{% endif %}
                  
                  {% endfor %}
                
              </ul>
            </div>
            <!-- // Single Widget -->

            <!-- Single Widget -->
            <div class="single-widget widget-tags">
              <h5 class="widget-title">Tags</h5>
              <ul>
                <li><a href="blog.html">Health</a></li>
                <li><a href="blog.html">Body</a></li>
                <li><a href="blog.html">Therapy</a></li>
                <li><a href="blog.html">Acupuncture</a></li>
                <li><a href="blog.html">Skin</a></li>
                <li><a href="blog.html">Service</a></li>
                <li><a href="blog.html">Ontario</a></li>
                <li><a href="blog.html">Stone</a></li>
              </ul>
            </div>
            <!-- // Single Widget -->

            <!-- Single Widget -->
            <div class="single-widget widget-archives">
              <h5 class="widget-title">Archives</h5>
              <ul>
                <li><a href="blog.html">January 2019</a></li>
                <li><a href="blog.html">March 2019</a></li>
                <li><a href="blog.html">April 2019</a></li>
                <li><a href="blog.html">July 2019</a></li>
                <li><a href="blog.html">September 2019</a></li>
                <li><a href="blog.html">October 2019</a></li>
              </ul>
            </div>
            <!-- // Single Widget -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


